@using Miscshopify.Core.Models;
@model ProductViewModel
@{
}

<div id="content" class="p-5" style="background-color: white;">
    <div>
        <div class="container">
            <div class="row">
                <div class="col-12 mb-3"><h4>Product Details</h4></div>
            </div>
        
            <div class="view-content">
                <div class="card-body">
                    <div class="row my-2">
                        <div class="col-12 col-md-7 d-flex align-items-center justify-content-center mb-2 mb-md-0">
                            <div class="d-flex align-items-center justify-content-center">
                                <img src="~/@Model.ImagePath" class="img-thumnail" alt="product image" width="100%" height="100%">
                            </div>
                        </div>
                        <div class="col-12 col-md-4">
                            <h4>@Model.Name</h4>
                            <div class="d-flex flex-wrap mt-1">
                                <h4 class="text-primary mr-1">BGN @Model.Price</h4>
                            </div>
                            <p>Available - <span class="text-success">In stock</span></p>
                            <ul class="product-features list-unstyled">
                                <li>
                                    <i class="fas fa-shopping-basket"></i>
                                    <span>Free Shipping</span>
                                </li>
                                <li>
                                    <i class="fas fa-money-bill-alt"></i>
                                    <span>Cash on delivery</span>
                                </li>
                            </ul>
                            <div class="d-flex flex-column flex-sm-row pt-1">
                                <a asp-action="AddToCart" asp-controller="Cart" asp-route-id="@Model.Id" class="btn btn-primary mr-0 mr-sm-2 mb-1 mb-sm-0">
                                    <i class="fas fa-shopping-basket mr-2"></i>
                                    <span>Add to cart</span>
                                </a>
                            </div>
                            <div class="row text-center py-8">
                                <hr>
                                <label>Description</label>
                                <p>
                                    @Model.Description
                                </p>
                                <hr>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row text-center py-8">
                <div class="col-12 col-md-4 mb-4 mb-md-0">
                    <div class="w-75 mx-auto">
                        <i class="fas fa-medal text-primary font-size-40px"></i>
                        <h4 class="mt-2 mb-1">100% Original</h4>
                    </div>
                </div>

                <div class="col-12 col-md-4 mb-4 mb-md-0">
                    <div class="w-75 mx-auto">
                        <i class="fas fa-clock text-primary font-size-40px"></i>
                        <h4 class="mt-2 mb-1">10 Day Replacement</h4>
                    </div>
                </div>
                <div class="col-12 col-md-4 mb-4 mb-md-0">
                    <div class="w-75 mx-auto">
                        <i class="fas fa-shield-alt text-primary font-size-40px"></i>
                        <h4 class="mt-2 mb-1">2 Year Warranty</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>